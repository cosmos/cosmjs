{
  "name": "@cosmjs/ledger-amino",
  "version": "0.36.1",
  "description": "A library for signing Amino-encoded transactions using Ledger devices",
  "contributors": [
    "Will Clark <willclarktech@users.noreply.github.com>"
  ],
  "license": "Apache-2.0",
  "type": "commonjs",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CosmWasm/cosmjs/tree/main/packages/ledger-amino"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "docs": "typedoc",
    "format": "prettier --write --log-level warn \"./src/**/*.ts\"",
    "format-text": "prettier --write \"./*.md\"",
    "build": "tsdown --format cjs --unbundle",
    "build:test": "tsdown --format cjs 'src/**/*.spec.ts' -d build/",
    "test-node": "yarn node jasmine-testrunner.cjs",
    "test": "yarn run build:test && yarn test-node",
    "demo-node": "tsdown --format cjs src/demo/web.ts -d build/demo/ && node ./demo/node.cjs",
    "coverage": "nyc --reporter=text --reporter=lcov yarn test --quiet",
    "pack-web": "yarn run build:test && webpack --mode development --config webpack.demo.config.cjs"
  },
  "dependencies": {
    "@cosmjs/amino": "workspace:^",
    "@cosmjs/crypto": "workspace:^",
    "@cosmjs/encoding": "workspace:^",
    "@cosmjs/math": "workspace:^",
    "@cosmjs/utils": "workspace:^",
    "@zondax/ledger-cosmos-js": "^4.0.1",
    "semver": "^7.5.2"
  },
  "devDependencies": {
    "@cosmjs/stargate": "workspace:^",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@ledgerhq/hw-transport": "^6.31.4",
    "@ledgerhq/hw-transport-node-hid": "^6.29.5",
    "@ledgerhq/hw-transport-webusb": "^6.29.4",
    "@types/jasmine": "^4",
    "@types/semver": "^7.3.4",
    "glob": "^11",
    "jasmine": "^4",
    "jasmine-spec-reporter": "^6",
    "nyc": "^15.1.0",
    "prettier": "^3.5.3",
    "ses": "^1.13.0",
    "source-map-support": "^0.5.19",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28",
    "typescript": "~5.9",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.6.0"
  }
}
