{
  "name": "@cosmjs/amino",
  "version": "0.36.1",
  "description": "Helpers for Amino based signing.",
  "contributors": [
    "Simon Warta <webmaster128@users.noreply.github.com>"
  ],
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cosmos/cosmjs/tree/main/packages/amino"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "docs": "typedoc",
    "format": "prettier --write --log-level warn \"./src/**/*.ts\"",
    "format-text": "prettier --write \"./*.md\"",
    "test-node": "yarn node jasmine-testrunner.cjs",
    "test-firefox": "yarn run build:test && karma start --single-run --browsers Firefox karma.conf.cjs",
    "test-chrome": "yarn run build:test && karma start --single-run --browsers ChromeHeadless karma.conf.cjs",
    "test": "yarn run build:test && yarn test-node",
    "coverage": "nyc --reporter=text --reporter=lcov yarn test --quiet",
    "build": "tsdown --unbundle",
    "build:test": "find . -name '*spec.ts' | xargs rolldown -d build/"
  },
  "dependencies": {
    "@cosmjs/crypto": "workspace:^",
    "@cosmjs/encoding": "workspace:^",
    "@cosmjs/math": "workspace:^",
    "@cosmjs/utils": "workspace:^"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jasmine": "^4",
    "@types/karma-firefox-launcher": "^2",
    "@types/karma-jasmine": "^4",
    "@types/karma-jasmine-html-reporter": "^1",
    "glob": "^11",
    "jasmine": "^4",
    "jasmine-spec-reporter": "^6",
    "karma": "^6.3.14",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^5",
    "karma-jasmine-html-reporter": "^1.5.4",
    "nyc": "^15.1.0",
    "prettier": "^3.5.3",
    "rolldown": "1.0.0-beta.34",
    "ses": "^1.13.0",
    "source-map-support": "^0.5.19",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28"
  }
}
