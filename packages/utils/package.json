{
  "name": "@cosmjs/utils",
  "version": "0.36.0",
  "description": "Utility tools, primarily for testing code",
  "contributors": [
    "IOV SAS <admin@iov.one>"
  ],
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cosmos/cosmjs/tree/main/packages/utils"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "docs": "typedoc --options typedoc.cjs",
    "format": "prettier --write --log-level warn \"./src/**/*.ts\"",
    "format-text": "prettier --write \"./*.md\"",
    "build": "tsdown --unbundle",
    "build:test": "tsdown 'src/**/*.spec.ts' -d build/",
    "test-node": "yarn node jasmine-testrunner.cjs",
    "test": "yarn run build:test && yarn test-node",
    "coverage": "nyc --reporter=text --reporter=lcov yarn test --quiet",
    "pack-web": "yarn run build:test && webpack --mode development --config webpack.web.config.cjs",
    "test-firefox": "yarn pack-web && karma start --single-run --browsers Firefox karma.conf.cjs",
    "test-chrome": "yarn pack-web && karma start --single-run --browsers ChromeHeadless karma.conf.cjs"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jasmine": "^4",
    "@types/karma-firefox-launcher": "^2",
    "@types/karma-jasmine": "^4",
    "@types/karma-jasmine-html-reporter": "^1",
    "@types/node": "*",
    "buffer": "^6.0.3",
    "glob": "^11",
    "jasmine": "^4",
    "jasmine-spec-reporter": "^6",
    "karma": "^6.3.14",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^5",
    "karma-jasmine-html-reporter": "^1.5.4",
    "nyc": "^15.1.0",
    "prettier": "^3.5.3",
    "ses": "^1.13.0",
    "source-map-support": "^0.5.19",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.6.0"
  }
}
